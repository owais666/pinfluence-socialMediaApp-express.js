<% include ./partials/header.ejs %>
<div class="w-full select-none h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1648837171808-d0eb9522455e?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
  <div class="w-[30vw]  bg-white px-20 py-20 pt-10 border-2 border-zinc-400 rounded-[20px] drop-shadow-xl">
    <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none mb-8">Welcome to Pinfluence</h1>
    
    <!-- Validation -->
    <% if(error.length > 0){ %>
        <p class="text-red-700 text-md pb-2 text-center">*<%= error %></p>
      <% } %> 
      
      <form action="/login" method="post">
      
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mb-4  w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-3 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <a class="mt-3 font-semibold text-zinc-500 inline-block" href="#">Forgot Password ?</a>
      <input class="border-2 block mt-3 text-lg font-semibold w-full px-3 py-2 bg-yellow-500 hover:bg-yellow-700 text-black hover:text-white rounded-full" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center ">
        By continuing, you agree to Pinfluence's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.
      </p>
    </form>

    <a class="inline-block mt-7 text-sm font-semibold text-zinc-800 text-center w-full hover:underline hover:text-sky-500" href="/register">Don't have an Account ? Sign Up</a>

  </div>
</div>
<% include ./partials/footer.ejs %>