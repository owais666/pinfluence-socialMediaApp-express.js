<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1577985759186-0854dfd3f218?q=80&w=1957&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
 
<!-- <div class="w-full h-screen bg-zinc-300 flex items-center justify-center"> -->
  <div class="w-[29vw]  bg-white px-20 py-10 rounded-[20px] border-2 border-zinc-400 drop-shadow-xl">
    <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none mb-10">Create New Account</h1>
    
    <% if(error.length > 0){ %>
      <p class="text-red-700 text-md pb-2 text-center">*<%= error %></p>
    <% } %> 
    
    <form action="/register" method="post">
        <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-2  w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name" required>
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-2  w-full px-3 py-2" type="text" name="username" placeholder="username" required>
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-2  w-full px-3 py-2" type="email" name="email" placeholder="email" required>
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-2  w-full px-3 py-2" type="number" name="contact" placeholder="contact" required>
      <input class="border-2 border-zinc-300 drop-shadow-md rounded-lg block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password" required>
      <input class="hover:text-white drop-shadow-xl block mt-5  w-full px-3 py-2 bg-yellow-500 hover:bg-yellow-700 text-black rounded-full" type="submit" value="Create New Account" required>
      <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center ">
        By continuing, you agree to Pinfluence's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.
      </p>
    </form>

    <a class="inline-block mt-5 text-sm font-semibold hover:underline text-zinc-800 text-center w-full hover:text-sky-500"" href="/">Already have an Account ? Login</a>

  </div>
</div>
</div>
<% include ./partials/footer.ejs %>