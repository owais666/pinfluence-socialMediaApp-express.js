<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
<h1 class="text-xl">Create a New Post.</h1>
<hr class="opacity-10 mt-3">
<form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2  rounded-md" type="file" name="postimage" >
    <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-zinc-800" type="text" name="title" placeholder="Title">
    <textarea class="block w-1/3 px-3 py-2 h-40 border-2 mt-2 rounded-md text-zinc-800" type="text" name="description"  placeholder="Description"></textarea>
    <input class="block w-1/3 px-3 py-2   mt-2 bg-red-700 rounded-md" type="submit" value="Create Post">
</form>
</div>
<% include ./partials/footer.ejs %>